<% if cookies[:current_quest] then @activeQuest = Quest.find(cookies[:current_quest_id]) end %>

<div class="row headline">
            <div class="col-xs-12">
                <h2>Challenge: <%= @quest.name %></h2>
            </div>
        </div>
	
        <div class="row links">
            <div class="col-xs-4">
                <%= link_to 'Back to Overview', quests_path %>
            </div>
            <div class="col-xs-4">
		<%= link_to 'Cancel Challenge', quests_cancel_path(@activeQuest) if @activeQuest %>
            </div>
            <div class="col-xs-4">
                <%= link_to 'Mark as Completed', quests_done_path(@activeQuest) if @activeQuest %>
               <%= link_to 'Accept Challenge', quests_accept_path(@quest) if (!@activeQuest && cookies[@quest.id] != "done") %>		
            </div>
        </div>
        
        <div class="row img_center">
            <div class="col-xs-12">
                <img src="<%= @quest.imgurl.blank? ? "/assets/default.svg" : @quest.imgurl %>" class="img-responsive">
            </div>
        </div>
	
	<% if cookies[@quest.id] == "done" then %>   
        <div class="row text">
            <div class="col-xs-12">
	    <h3>How was your experience?</h3>
	    <p>Did you experience joy or frustration? How did other people treat you? Were you ever out of your comfort zone? Share your thoughts with us and discuss.</p>
               <div id="disqus_thread"></div>
	    <script type="text/javascript">
		/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
		var disqus_shortname = 'ggj14'; // required: replace example with your forum shortname

		/* * * DON'T EDIT BELOW THIS LINE * * */
		(function() {
		    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
		    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
		    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
		})();
	    </script>
	    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
            </div>
        </div>
<% end %>
        
        <div class="row text">
            <div class="col-xs-12">
                <%= @quest.description.html_safe %>
            </div>
        </div>        
	
	<div class="row links">
            <div class="col-xs-4">
                <%= link_to 'Back to Overview', quests_path %>
            </div>
            <div class="col-xs-4">
		<%= link_to 'Cancel Challenge', quests_cancel_path(@activeQuest) if @activeQuest %>
            </div>
            <div class="col-xs-4">
                <%= link_to 'Mark as Completed', quests_done_path(@activeQuest) if @activeQuest %>
               <%= link_to 'Accept Challenge', quests_accept_path(@quest) if (!@activeQuest && cookies[@quest.id] != "done") %>		
            </div>
        </div>
	
